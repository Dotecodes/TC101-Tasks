#include <iostream>
using namespace std;
int main () {
  int x;
  int y;
  cout << "Pick the first number: ";
  cin>> x;
  cout << "Pick the second number: ";
  cin>> y;
  cout << "x + y =" << (x + y) <<endl;
  cout << "x - y =" << (x - y) <<endl;
  cout << "x * y =" << (x * y) <<endl;
  cout << "x / y =" << (x % y) <<endl;
  cout << "The reminder of the division  x / y is:" << (x % y) << endl;
  return 0;
}
